<?xml version="1.0" encoding="UTF-8"?>

    <template id="mercadopago_form_external_payment" name="Mercadopago External Form">
        <t t-name="payment_mercadopago.mercadopago_form_external_payment">
            <form action="/process_payment" method="post" id="paymentForm" style="background-color: lightgray;">
                <t t-if="mpm">
                    <div t-name="Authorization_msg" class="alert alert-info" role="alert" style="margin-left:10px">
                        <h6 class="text-info" style="margin: 0;">Se va a realizar una autorización
                            de $ <span t-esc="mercadopago_authorize_amount"/>
                            para validar la tarjeta, una vez validada se liberará la autorización.</h6>
                    </div>
                </t>
                <div class="creditCardForm" style="display:table">
                    <div style="display:table-cell; vertical-align: middle;width: 40%;">
                        <div class="">
                            <div class="form-group" id="email" style="display:block">
                                <input id="email" class="form-control" style="color:#ccc !important; border:0; border-bottom:1px solid #ccc; font-size: 16px; width: 100%;" name="email" type="text" t-att-value="email" readonly="True"/>
                                <label for="email" style="cursor: inherit;text-rendering: optimizeLegibility;display: block;top: 20px;font-size: 16px;font-weight: 400;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;width: 100%;">E-mail</label>
                           </div>
                        </div>
                        <div class="">
                            <div class="form-group" id="card-number-field" style="display:block">
                                 <input type="text" id="cardNumber" class="form-control" data-checkout="cardNumber"
                                   onselectstart="return false" onpaste="return false"
                                   oncopy="return false" oncut="return false"
                                   ondrag="return false" ondrop="return false" autocomplete="off"
                                 style="border:0; border-bottom:1px solid #ccc; font-size: 16px; width: 100%;"/>
                                <label for="cardNumber" style="cursor: inherit;text-rendering: optimizeLegibility;display: block;top: 20px;font-size: 16px;font-weight: 400;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;width: 100%;">Número de la tarjeta</label>
                            </div>
                        </div>
                        <div class="">
                            <div class="form-group" id="titular" style="display:block">
                                <input id="cardholderName" style="border:0; border-bottom:1px solid #ccc; font-size: 16px; width: 100%;" class="form-control" data-checkout="cardholderName" type="text"/>
                                <label for="cardholderName" style="cursor: inherit;text-rendering: optimizeLegibility;display: block;top: 20px;font-size: 16px;font-weight: 400;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;width: 100%;">Nombre y Apellidos</label>
                            </div>
                        </div>
                        <div style="display:table">
                            <div class="form-group" id="expiration-date" style="display:table-cell;width: 45%;">
                                <div>
                                    <input style="display:inline; border:0; border-bottom:1px solid #ccc; font-size: 16px; width: 30%; height: 40px;" type="text" placeholder="MM" class="form-control" id="cardExpirationMonth" data-checkout="cardExpirationMonth"
                                     onselectstart="return false" onpaste="return false"
                                     oncopy="return false" oncut="return false"
                                       ondrag="return false" ondrop="return false" autocomplete="off"/>
                                   <span style="display:inline">/</span>
                                   <input style="display:inline; border:0; border-bottom:1px solid #ccc; font-size: 16px; width: 30%; height: 40px;" type="text" placeholder="YY" id="cardExpirationYear" class="form-control" data-checkout="cardExpirationYear"
                                     onselectstart="return false" onpaste="return false"
                                     oncopy="return false" oncut="return false"
                                       ondrag="return false" ondrop="return false" autocomplete="off"/>
                                </div>
                                <label for="" style="cursor: inherit;text-rendering: optimizeLegibility;display: block;top: 20px;font-size: 16px;font-weight: 400;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;width: 100%;">Fecha de vencimiento</label>
                            </div>
                            <div class="form-group" id="CVV" style="display:table-cell;width: 42%;">
                                <input id="securityCode" data-checkout="securityCode" name="cvv" class="form-control" type="text"
                                   onselectstart="return false" onpaste="return false"
                                   oncopy="return false" oncut="return false"
                                     ondrag="return false" ondrop="return false" autocomplete="off"
                                style="border:0; border-bottom:1px solid #ccc; font-size: 16px; width: 100%;"/>
                                <label for="securityCode" style="cursor: inherit;text-rendering: optimizeLegibility;display: block;top: 20px;font-size: 16px;font-weight: 400;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;width: 100%;">Código de seguridad</label>
                            </div>
                        </div>
                        <div style="display:table">
                            <div class="tipo_doc" style="display:table-cell;width: 20%;">
                                <select id="docType" class="form-control" name="docType" data-checkout="docType" type="text" style="height: 40px; width: 60%; border-radius: 5px;"></select>
                                 <label for="docType" style="cursor: inherit;text-rendering: optimizeLegibility;display: block;top: 20px;font-size: 16px;font-weight: 400;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;width: 100%;">Tipo de documento</label>
                            </div>
                            <div class="num_doc" style="display:table-cell;width: 80%;padding-left: 36px;">
                                <input id="docNumber" style="border:0; border-bottom:1px solid #ccc; font-size: 16px; width: 100%;" class="form-control" name="docNumber" data-checkout="docNumber" type="text"/>
                                <label for="docNumber" style="cursor: inherit;text-rendering: optimizeLegibility;display: block;top: 20px;font-size: 16px;font-weight: 400;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;width: 100%;">Número de documento</label>
                            </div>
                        </div>
                        <div class="" >
                            <div class="form-group" id="issuerInput" t-att-style="mpm == 0 ? 'display:block' : 'display: none;'">
                                <select class="form-control" id="issuer" name="issuer" data-checkout="issuer" style="height: 40px; width: 60%; border-radius: 5px;"></select>
                                <label for="issuer" style="cursor: inherit;text-rendering: optimizeLegibility;display: block;top: 20px;font-size: 16px;font-weight: 400;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;width: 100%;">Banco emisor</label>
                            </div>
                        </div>
                        <div>
                            <div class="form-group" id="cuotas" t-att-style="mpm == 0 ? 'display:block' : 'display: none;'">
                                <select type="text" class="form-control" id="installments" name="installments" style="height: 40px; width: 100%;border-radius: 5px;"></select>
                                <label for="installments" style="cursor: inherit;text-rendering: optimizeLegibility;display: block;top: 20px;font-size: 16px;font-weight: 400;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;width: 100%;">Cuotas</label>
                            </div>
                        </div>
                        <div>
                            <div class="form-group" id="save_card" t-att-style="mpm == 0 ? 'float: left; display:block' : 'display: none;'">
                                <label for="amount" style="cursor: inherit;text-rendering: optimizeLegibility;display: inline;top: 20px;font-size: 16px;font-weight: 400;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;width: 100%;">Desea guardar esta tarjeta?</label>
                                <input type="checkbox" name="save_card"  class="id_payment_token" value="on"/>
                            </div>
                            <t t-if="mpm">
                                <input type="hidden" name="save_card" style="float: right;" class="id_payment_token" value="on"/>
                            </t>
                        </div>
                    </div>
                    <div style="display:table-cell; vertical-align: middle;width: 30%;">
                        <div class="form-group" id="credit_cards" style="margin: auto;">
                            <div>
                                <img src="/payment_mercadopago/static/src/img/visa.png" id="visa" style="width: 100%;border-radius: 10px;margin-bottom: 10px;"/>
                            </div>
                             <div>
                                <img src="/payment_mercadopago/static/src/img/mastercard.jpg" id="mastercard" style="width: 100%;border-radius: 10px;margin-bottom: 10px;"/>
                             </div>
                             <div>
                                <img src="/payment_mercadopago/static/src/img/amex.jpg" id="amex" style="width: 100%;border-radius: 10px;margin-bottom: 10px;"/>
                             </div>
                        </div>
                    </div>
                </div>
                <div class="form-group" id="pay-now" style="display: inline-block;text-align: center;">
                    <input type="hidden" name="transactionAmount" id="transactionAmount" t-att-value="tamount" />
                    <input type="hidden" name="paymentMethodId" id="paymentMethodId" />
                    <input type="hidden" name="description" id="description" />
                    <input type="hidden" name="csrf_token" t-att-value="csrf_token"/>
                    <input type="hidden" name="acquired_id" t-att-value="acquired_id"/>
                    <input type="hidden" name="pmp" t-att-value="mpm"/>
                    <br/>
                    <t t-if="mpm">
                        <button class='btn btn-primary btn-lg' type="submit">Adicionar tarjeta</button>
                    </t>
                    <t t-else="">
                        <button class='btn btn-primary btn-lg' type="submit">Pagar</button>
                    </t>
                    <br/>
                </div>
            </form>
        </t>
    </template>
