<?xml version="1.0" encoding="UTF-8"?>

    <template id="cvv_mercadopago" name="CVV Mercadopago">
        <t t-name="payment_mercadopago.cvv_mercadopago">
            <div class="">
                    <div class="heading">
                        <h6 style="text-align: center;">Introduzca el Código de Seguridad</h6>
                    </div>
            </div>
            <div class="payment">
                <div class="form-group hi" id="CVV">
                    <input id="securityCode_confirm"  name="cvv_confirm" class="form-control" type="text"
                       onselectstart="return false" onpaste="return false"
                       oncopy="return false" oncut="return false"
                         ondrag="return false" ondrop="return false" autocomplete="off"
                    style="border:0; border-bottom:1px solid #ccc; font-size: 16px; width: 100%;"/>
                    <label for="docNumber" style="cursor: inherit;text-rendering: optimizeLegibility;display: block;top: 20px;font-size: 16px;font-weight: 400;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;width: 100%;">Código de Seguridad</label>
                </div>
            </div>
        </t>
    </template>
